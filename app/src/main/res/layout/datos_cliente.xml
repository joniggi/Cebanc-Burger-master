<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"

        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs4"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="@string/telefono"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="38dp"
        android:id="@+id/textView8"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <ImageView
        app:srcCompat="@drawable/entrar2"
        android:layout_marginTop="72dp"
        android:id="@+id/buttonSiguiente"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editTextTelefono"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="68dp" />

    <TextView
        android:text="@string/direccion"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/editTextDireccion"
        android:layout_alignBottom="@+id/editTextDireccion"
        android:layout_toStartOf="@+id/editTextDireccion"
        android:layout_marginEnd="33dp" />

    <TextView
        android:text="@string/apellido"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/editTextApellido"
        android:layout_alignBottom="@+id/editTextApellido"
        android:layout_alignStart="@+id/textView8" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/iconousuario"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/editTextNombre"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/iconoubicacion"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/editTextDireccion"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/iconotelefono"
        android:id="@+id/imageView12"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/atras2"
        android:id="@+id/buttonSalir"
        android:layout_alignTop="@+id/buttonSiguiente"
        android:layout_alignStart="@+id/textView8" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/iconoapellido"
        android:layout_alignTop="@+id/editTextApellido"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="9"
        android:id="@+id/editTextTelefono"
        android:hint="@string/tlf"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextDireccion"
        android:hint="@string/dire"
        android:layout_above="@+id/imageView12"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextApellido"
        android:hint="@string/ape"
        android:layout_above="@+id/editTextDireccion"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp" />

    <TextView
        android:text="@string/nombre"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/imageView13"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextNombre"
        android:hint="@string/nom"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/editTextApellido" />

    <TextView
        android:text="@string/introduzca"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/appbar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>