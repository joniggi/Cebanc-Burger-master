<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginBottom="35dp"
        android:id="@+id/btnAnadirBebida"
        app:backgroundTint="@android:color/holo_red_dark"
        app:rippleColor="@color/cardview_dark_background"
        app:elevation="9dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_alignLeft="@+id/btnAnadirBebida"
        android:layout_alignStart="@+id/btnAnadirBebida"
        android:id="@+id/textView14"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <ListView
        android:layout_height="400dp"
        android:id="@+id/listView2"
        android:layout_width="250dp"
        android:layout_alignBottom="@+id/btnAnadirBebida"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp" />

    <ImageView
        app:srcCompat="@drawable/check"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/listView2"
        android:layout_toEndOf="@+id/listView2"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBebidas"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/bseleccionadas"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"

        android:layout_below="@+id/spinnerBebidas"
        android:layout_alignParentStart="true" />


</RelativeLayout>